<%- include('../layouts/header') %>

      <%- include('../layouts/head-links') %>

      <!-- Button trigger modal -->
      <div class="container d-flex justify-content-center my-3">
        <button
          type="button"
          class="btn btn-dark text-center"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Add New Product
        </button>
      </div>

      <!-- Modal -->
      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
        data-bs-backdrop="static"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">
                Add New Product
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
                
                <!-- -------------------- -->


                <form action="/admin/product_management/add_product" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="form-holder"
                        name="name"
                        placeholder="Name"
                        required
                      />
                    </div>
                    <div class="mb-3">
                        <label for="thumbnail" class="px-1" style="font-size: 0.75rem;">Upload thumbnail</label>
                      <input
                        class="form-control"
                        id="thumbnail"
                        name="thumbnail"
                        type="file"
                        required
                      />
                    </div>
                    <div class="mb-3">
                      <label for="frontImage" class="px-1" style="font-size: 0.75rem;">Upload Front Image</label>
                    <input
                      class="form-control"
                      id="frontImage"
                      name="frontImage"
                      type="file"
                      required
                    />
                  </div>
                    <div class="mb-3">
                      <label for="images" class="px-1" style="font-size: 0.75rem;">Upload 3 Images</label>
                    <input
                      class="form-control"
                      id="images"
                      name="images"
                      type="file"
                      multiple
                    />
                  </div>
                    <div class="mb-3">
                      <select id="inputState" class="form-control" name="category"> 
                        <option selected>Choose category</option> 
                        <%categories.forEach((data)=>{%> 
                          <option value="<%=data._id%>"><%=data.name%></option> 
                        <%})%> 
                      </select>
                    </div>
                    <div class="mb-3">
                      <input
                        type="text"
                        class="form-control"
                        id="brand"
                        placeholder="Brand"
                        name="brand"
                        required
                      />
                    </div>
                    <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="color"
                          placeholder="Color"
                          name="color"
                          required
                        />
                      </div>
                    <div class="mb-3">
                        <input
                          type="number"
                          class="form-control"
                          id="price"
                          placeholder="Price"
                          name="price"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="number"
                          class="form-control"
                          id="stock"
                          placeholder="Stock"
                          name="stock"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="number"
                          class="form-control"
                          id="referenceNumber"
                          placeholder="Reference Number"
                          name="referenceNumber"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="modelCase"
                          placeholder="Model Case"
                          name="modelCase"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="waterResistance"
                          placeholder="Water Resistance"
                          name="waterResistance"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="movement"
                          placeholder="Movement"
                          name="movement"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="powerReserve"
                          placeholder="Power Reserve"
                          name="powerReserve"
                          required
                        />
                      </div>
                      <div class="mb-3">
                        <input
                          type="text"
                          class="form-control"
                          id="bracelet"
                          placeholder="Bracelet"
                          name="bracelet"
                          required
                        />
                      </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <button type="submit" class="btn btn-success">
                    Save changes
                  </button>
                  </form>


<!-- ------------------- -->
            
            </div>
          </div>
        </div>
      </div>

      <!-- Responsive data table -->
      <div class="card-body container">
        <table id="dataTable" class="table table-hover cell-border fw-light nowrap">
          <thead>
            <tr>
              <th>Name</th>
              <th>Image</th>
              <th>Category</th>
              <th>Brand</th>
              <th>Price â‚¹</th>
              <th>Stock</th>
              <th>Action</th>
            </tr>
          </thead>
          <% if(products !=null){ %>
          <tbody>
            <% products.forEach(function(item,i){ %>
            <tr>
              <td><%= item.name %></td>
              <td class="text-center"><img src="/Public/img/products/<%= item.thumbnail %>" alt="" width="80px" height="100px"></td>
              <td><%= item.category.name %></td>
              <td><%= item.brand %></td>
              <td><%= item.price %></td>
              <td><%= item.stock %></td>
              <td >
                <div class="text-center d-flex flex-column">
                  <a href="/admin/product_management/edit?id=<%= item._id %>" onclick="return confirm('Proceed to edit <%= item.name %> ?')" class="btn btn-dark text-white btn-sm my-1">Edit</a>
                <% if(item.listed==true){ %> 
                <a href="/admin/product_management/changeListing?id=<%= item._id %>" onclick="return confirm('Proceed to change listing of <%= item.name %> ?')" class="btn btn-danger text-white btn-sm  my-1">Unlist</a>
              <% }else{ %>
                <a href="/admin/product_management/changeListing?id=<%= item._id %>" onclick="return confirm('Proceed to change listing of <%= item.name %> ?')" class="btn btn-success text-white btn-sm my-1">List</a>
                <% } %>
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
          <% } %>
        </table>
      </div>
      <%- include('../layouts/footer') %>
