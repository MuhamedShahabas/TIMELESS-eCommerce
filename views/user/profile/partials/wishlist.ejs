<%- include('../layouts/header') %> <%- include('../layouts/user-links') %>

<div class="container mx-auto">
  <div class="line-break text-center py-4">
    <span class="shadow-heading">Your Wishlist</span>
  </div>
  <div class="row justify-content-center m-3" id="wishlist">
    <div class="col-lg-6">
      <% if(userWishlist!= null && userWishlist.products.length !=0){%> <%
      userWishlist.products.forEach((product) => {%>
      <div class="d-flex rounded my-2 p-3" style="border: 1px solid #dbdbdb">
        <div class="prod-img">
          <img
            src="/public/img/products/<%=product.thumbnail%>"
            alt=""
            height="150px"
          />
        </div>
        <div
          class="prod-details d-flex flex-grow-1 flex-column justify-content-between"
        >
          <h5><%=product.name%></h5>
          <h6><%=product.brand%></h6>
          <span style="font-size: 0.85rem"> Price: <%=product.price%></span>
          <div class="d-flex justify-content-end mt-2">
            <a
              href="/users/cart/addToCart/<%=product._id%>"
              class="btn btn-secondary btn-sm text-white mx-2"
              >Add To cart</a
            >
            <button
              class="btn btn-dark btn-sm text-white"
              onclick="removeFromWishlist('<%=product._id%>')"
            >
              Remove
            </button>
          </div>
        </div>
      </div>
      <%})%> <%}else{%>
      <h4 class="text-center my-4 fw-light">
        No products on your wishlist yet.
      </h4>
      <div class="text-center my-4 fw-bold">
        <a href="/" class="text-decoration-underline fst-italic"
          >Continue shopping <i class="fa fa-arrow-right"></i
        ></a>
      </div>
      <%}%>
    </div>
  </div>
</div>
<script>
  function removeFromWishlist(id) {
    Swal.fire({
      text: "Proceed to delete?",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Yes",
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: "/users/wishlist/",
          method: "delete",
          data: {
            productID: id,
          },
          success: (res) => {
            if (res.data.deleted) {
              $("#wishlist").load(location.href + " #wishlist");
            }
          },
        });
      }
    });
  }
</script>

<%- include('../layouts/footer') %>
